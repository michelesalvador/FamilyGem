<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<corners android:radius="5dp"/>
			<solid android:color="@color/evidenzia"/>
		</shape>
	</item>
	<item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
		<shape>
			<gradient
				android:type="radial"
				android:startColor="@color/evidenziaChiaro"
				android:endColor="@color/evidenzia"
				android:gradientRadius="150dp" />
			<stroke
				android:width="2dp"
				android:color="@color/femmina"/>
			<corners android:radius="3dp"/>
		</shape>
	</item>
</layer-list>