<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="10dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp">

    <TextView
        android:id="@+id/note_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/note_citations"
        android:ellipsize="end"
        android:maxLines="4"
        tools:text="This is a note text that takes multiple lines to display how it wraps. " />

    <TextView
        android:id="@+id/note_citations"
        style="@style/AppTheme.ReferencesNumber"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        tools:text="123" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/note_text"
        android:layout_marginTop="8dp"
        android:background="?android:attr/listDivider" />
</RelativeLayout>
