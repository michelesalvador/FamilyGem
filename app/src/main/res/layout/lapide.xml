<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical">

	<ImageView
		android:id="@+id/zero"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="-20dp"
		app:srcCompat="@mipmap/vetrina" />

	<TextView
		android:id="@+id/uno"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/zero"
		android:layout_centerHorizontal="true"
		android:text="Family Gem"
		android:textColor="#000"
		android:textSize="20sp" />

	<TextView
		android:id="@+id/due"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/uno"
		android:layout_centerHorizontal="true"
		android:text="The family tree in your pocket"
		android:textColor="#000"
		android:textSize="16sp"
		android:textStyle="italic" />

	<TextView
		android:id="@+id/lapide_versione"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/due"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:text="Version 0.6.3"
		android:textColor="#000"
		android:textSize="16sp" />

	<TextView
		android:id="@+id/lapide_link"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/lapide_versione"
		android:layout_alignParentTop="false"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:padding="4dp"
		android:text="www.familygem.app"
		android:textColor="@color/primarioScuro"
		android:textSize="16sp" />

</RelativeLayout>