<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- TextView -->
        <item name="android:textAppearanceSmall">@style/AppTheme.BasicText</item>
        <!-- RadioButton, SwitchCompat, CheckBox -->
        <item name="android:textAppearance">@style/AppTheme.BasicText</item>
        <!-- PopupMenu, options menu item -->
        <item name="android:itemTextAppearance">@style/AppTheme.BasicText</item>
        <item name="textAppearancePopupMenuHeader">@style/AppTheme.LittleTitle</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>

    <style name="AppTheme.BasicText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Title">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.LittleTitle">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Suggestion">
        <item name="android:textColor">@color/text_veiled</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.Link">
        <item name="android:textColor">@color/link</item>
        <item name="android:background">@drawable/link_underline</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="AppTheme.ExpandedAppBar">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.CollapsedAppBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Slug">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/slug_background</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <style name="AppTheme.Navigator" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/primary</item> <!-- Selected text and icon -->
        <item name="colorControlHighlight">@color/accent</item> <!-- Selected background -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="colorControlNormal">#FFF</item> <!-- Buttons -->
        <item name="android:textColorPrimary">#FFF</item> <!-- Text -->
    </style>

    <style name="AppTheme.WhiteTint" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppTheme.Wheel">
        <item name="android:background">@drawable/ruota_sfondo</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <!-- Hides the dividing lines from API 23 -->
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="AppTheme.NormalButton" parent="AppTheme.ColoredButton">
        <item name="backgroundTint">@drawable/button_background_color</item>
    </style>
</resources>
